<Application x:Class="MVVMFirma.App" 
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             d1p1:Ignorable="d" 
             xmlns:d1p1="http://schemas.openxmlformats.org/markup-compatibility/2006">
    <Application.Resources>
        <ResourceDictionary>
            <vm:ViewModelLocator x:Key="Locator" 
                                 d:IsDataSource="True" 
                                 xmlns:vm="clr-namespace:MVVMFirma.ViewModel" />
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Themes/Styles/Colors.xaml"/>
                <ResourceDictionary Source="Themes/Styles/DarkColors.xaml"/>
                <ResourceDictionary Source="Themes/Styles/DataGrids.xaml"/>
                <ResourceDictionary Source="Themes/Styles/Buttons.xaml"/>
                
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
  </Application.Resources>
</Application>