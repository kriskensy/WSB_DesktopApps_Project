<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf">

    <Style TargetType="lvc:CartesianChart">
        <Setter Property="LegendLocation" Value="Right" />
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}" />
        <Setter Property="FontFamily" Value="Segoe UI" />
        <Setter Property="FontSize" Value="12" />
    </Style>

    <Style TargetType="lvc:Axis">
        <!--<Setter Property="Labels" Value="{Binding Labels}" />-->
        <Setter Property="FontFamily" Value="Segoe UI" />
        <Setter Property="FontSize" Value="12" />
        <Setter Property="Foreground" Value="{DynamicResource ChartForegroundBrush}" />
    </Style>

    <Style TargetType="lvc:ColumnSeries">
        <Setter Property="Fill" Value="{DynamicResource ChartColumnsBrush}" />
    </Style>

</ResourceDictionary>