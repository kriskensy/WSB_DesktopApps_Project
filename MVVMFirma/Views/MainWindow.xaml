<Window x:Class="MVVMFirma.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
        Title="MVVMFirma" Height="1200" Width="1600" 
        xmlns:vm="clr-namespace:MVVMFirma.Views" 
        xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp">
    <Window.Resources>
        <ResourceDictionary Source="MainWindowResources.xaml"  />
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        
        <Menu Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2" Margin="2">
            <MenuItem Header="File">
                <MenuItem Header="New">
                    <MenuItem.Icon>
                        <fa:IconBlock Icon="File" Foreground="Black" />
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="Open">
                    <MenuItem.Icon>
                        <fa:IconBlock Icon="FolderOpen" Foreground="Black" />
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="Save">
                    <MenuItem.Icon>
                        <fa:IconBlock Icon="Save" Foreground="Black" />
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="Exit">
                    <MenuItem.Icon>
                        <fa:IconBlock Icon="SignOutAlt" Foreground="Black" />
                    </MenuItem.Icon>
                </MenuItem>
            </MenuItem>
            <MenuItem Header="Tools">
                <MenuItem Header="Settings">
                    <MenuItem.Icon>
                        <fa:IconBlock Icon="Cog" Foreground="Black" />
                    </MenuItem.Icon>
                </MenuItem>
            </MenuItem>
            <MenuItem Header="Help">
                <MenuItem Header="View Help">
                    <MenuItem.Icon>
                        <fa:IconBlock Icon="QuestionCircle" Foreground="Black" />
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="Check for Updates">
                    <MenuItem.Icon>
                        <fa:IconBlock Icon="SyncAlt" Foreground="Black" />
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="About">
                    <MenuItem.Icon>
                        <fa:IconBlock Icon="InfoCircle" Foreground="Black" />
                    </MenuItem.Icon>
                </MenuItem>
            </MenuItem>
        </Menu>
        <ToolBar Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2" Margin="2"> 
            <!--TODO: dorobić pseudo logowanie, home, dark/light button-->
            <!--<fa:IconButton Icon="Home" Width="60" Height="24" Content="Home" Margin="2" />
            <fa:IconButton Icon="User" Width="60" Height="24" Content="Profile" Margin="2" />-->
            <ToggleButton Width="60" Height="24" Background="Blue" Margin="2"/>
        </ToolBar>
        
        <Border Grid.Row="2" Grid.Column="0">
            <HeaderedContentControl 
                Header="Menu" 
                Background="Aqua" 
                Content="{Binding Path=Commands}"
                ContentTemplate="{StaticResource CommandsTemplate}"
                Style="{StaticResource MainHCCStyle}"
                />
        </Border>
        
        <Border Grid.Row="2" Grid.Column="1">
            <HeaderedContentControl 
                Header="Workspace"
                Content="{Binding Path=Workspaces}"
                ContentTemplate="{StaticResource WorkspacesTemplate}"
                Style="{StaticResource MainHCCStyle}"
            />
        </Border>
        
        <StatusBar Grid.Column="0" Grid.Row="3" Grid.ColumnSpan="2">
            <StatusBarItem>
                <TextBlock>Project: Krzysztof Kensy</TextBlock>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
