<Window x:Class="MVVMFirma.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
        Title="MVVMFirma" Height="1200" Width="1600" 
        xmlns:vm="clr-namespace:MVVMFirma.Views" 
        xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp">
    <Window.Resources>
        <ResourceDictionary Source="MainWindowResources.xaml"  />
    </Window.Resources>
    <Grid Background="{DynamicResource SecondaryBackgroundBrush}" >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>

        <Menu Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2" Margin="2" Foreground="{DynamicResource SecondaryForegroundBrush}"
              Background="{DynamicResource PrimaryForegroundBrush}">
            <MenuItem Header="File">
                <MenuItem Header="New" Background="{DynamicResource SecondaryBackgroundBrush}">
                    <MenuItem.Icon>
                        <fa:IconBlock Icon="File" Foreground="{DynamicResource SecondaryForegroundBrush}" />
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="Open" Background="{DynamicResource SecondaryBackgroundBrush}">
                    <MenuItem.Icon>
                        <fa:IconBlock Icon="FolderOpen" Foreground="{DynamicResource SecondaryForegroundBrush}" />
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="Save" Background="{DynamicResource SecondaryBackgroundBrush}">
                    <MenuItem.Icon>
                        <fa:IconBlock Icon="Save" Foreground="{DynamicResource SecondaryForegroundBrush}" />
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="Exit" Background="{DynamicResource SecondaryBackgroundBrush}">
                    <MenuItem.Icon>
                        <fa:IconBlock Icon="SignOutAlt" Foreground="{DynamicResource SecondaryForegroundBrush}" />
                    </MenuItem.Icon>
                </MenuItem>
            </MenuItem>
            <MenuItem Header="Tools">
                <MenuItem Header="Settings" Background="{DynamicResource SecondaryBackgroundBrush}">
                    <MenuItem.Icon>
                        <fa:IconBlock Icon="Cog" Foreground="{DynamicResource SecondaryForegroundBrush}" />
                    </MenuItem.Icon>
                </MenuItem>
            </MenuItem>
            <MenuItem Header="Help">
                <MenuItem Header="View Help" Background="{DynamicResource SecondaryBackgroundBrush}">
                    <MenuItem.Icon>
                        <fa:IconBlock Icon="QuestionCircle" Foreground="{DynamicResource SecondaryForegroundBrush}" />
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="Check for Updates" Background="{DynamicResource SecondaryBackgroundBrush}">
                    <MenuItem.Icon>
                        <fa:IconBlock Icon="SyncAlt" Foreground="{DynamicResource SecondaryForegroundBrush}" />
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="About" Background="{DynamicResource SecondaryBackgroundBrush}">
                    <MenuItem.Icon>
                        <fa:IconBlock Icon="InfoCircle" Foreground="{DynamicResource SecondaryForegroundBrush}" />
                    </MenuItem.Icon>
                </MenuItem>
            </MenuItem>
        </Menu>
        
        <ToolBar Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2" Margin="2" Background="{DynamicResource HighlightBrush}">
            <!--TODO: togglebutton do zmiany trybu ciemny/jasny
            <ToggleButton Width="100" Height="40" Margin="2" Click="TU WPISZ NAZWE WYWOŁYWANEJ METODY KTÓRA ODWOŁA SIĘ DO THEME_MANAGER">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock x:Name="ThemeIcon" 
                       FontFamily="FontAwesome" 
                       FontSize="20" 
                       Text="&#xf204;" 
                       Margin="0,0,8,0" />
                    <TextBlock x:Name="ThemeText" 
                       FontSize="16" 
                       Text="Light" />
                </StackPanel>
            </ToggleButton>-->
        </ToolBar>


        <Border Grid.Row="2" Grid.Column="0" Background="{DynamicResource PrimaryForegroundBrush}">
            <HeaderedContentControl 
                Header="Menu" 
                Background="{DynamicResource ButtonForegroundBrush}" 
                Foreground="{DynamicResource InfoBrush}"
                Content="{Binding Path=Commands}"
                ContentTemplate="{StaticResource CommandsTemplate}"
                Style="{StaticResource MainHCCStyle}"
                />
        </Border>

        <Border Grid.Row="2" Grid.Column="1" Background="{DynamicResource PrimaryForegroundBrush}">
            <HeaderedContentControl 
                Header="Workspace"
                Background="{DynamicResource ButtonForegroundBrush}" 
                Foreground="{DynamicResource InfoBrush}"
                Content="{Binding Path=Workspaces}"
                ContentTemplate="{StaticResource WorkspacesTemplate}"
                Style="{StaticResource MainHCCStyle}"
            />
        </Border>

        <StatusBar Grid.Column="0" Grid.Row="3" Grid.ColumnSpan="2">
            <StatusBarItem Background="{DynamicResource PrimaryForegroundBrush}">
                <TextBlock 
                    Foreground="{DynamicResource SecondaryForegroundBrush}"
                    FontSize="16">Project: Krzysztof Kensy</TextBlock>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
